.jumbotron {
    background-image: url('<%= image_path "bg_pizza.jpg" %>');
    border: 1px solid gray;
    
    h2 {
        text-align: center;
        
        span {
            color: white;
            letter-spacing: -1px;  
            background: rgb(0, 0, 0); /* fallback color */
            background: rgba(0, 0, 0, 0.5);
            padding: 10px;
            border-radius: 5px;
        }
    }
}